@using System.Globalization
@inject NavigationManager NavManager
@inject ILocalStorageService localStorage

<select class="form-control" @bind="Culture" style="width:80px; height:50px; position:absolute; right:0;">
    @foreach (var item in cultures)
    {
        <option value="@item">@item.DisplayName</option>
    }
</select>

@code {
    CultureInfo[] cultures = new[]
        {
new CultureInfo("en-US"),
new CultureInfo("uz-UZ"),
new CultureInfo("ru-RU")
};

    CultureInfo Culture
    {
        get => CultureInfo.CurrentCulture;
        set
        {
            if (CultureInfo.CurrentCulture != value)
            {
                localStorage.SetItemAsync<string>("culture", value.Name);
                NavManager.NavigateTo(NavManager.Uri, forceLoad: true);
            }
        }
    }
}
