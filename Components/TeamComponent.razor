@inject IStringLocalizer<Resources.TeamComponent> localizer

<section id="team" class="team section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>@localizer["Teamsection"]</h2>
            <h3>@((MarkupString)localizer["ourteam"].ToString()) </h3>
            <p>@localizer["Teamsubtitle"]</p>
        </div>
        <div class="row">
            @for(int i=1;i<5;i++){
                <Team_MembersComponent></Team_MembersComponent> 
            }  
        </div>
    </div>
</section>

